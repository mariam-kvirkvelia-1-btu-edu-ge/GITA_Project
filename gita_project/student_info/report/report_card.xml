<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="student">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <style type="text/css">
                        header { background-color: red;
                        color: white;
                        text-align: center;
                        padding: 20px;
                        text-size: 30px;
                        text-type: bold;
                        }
                        table, th, td { background-color: LightGray;
                        border: 1px solid;
                        padding: 20px;
                        }
                    </style>
                    <header>Student Info</header>
                    <br/>
                    <br/>
                    <br/>
                    სტუდენტის სახელი, გვარი: <t t-esc="doc.name"/>
                    <br/>
                    <br/>
                    პირადი ნომერი: <t t-esc="doc.id_number"/>
                    <br/>
                    <br/>
                    დაბადების თარიღი: <t t-esc="doc.birth_date"/>
                    <br/>
                    <br/>
                    მშობლის მობილურის ნომერი: <t t-esc="doc.mobile"/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                </t>
            </t>
        </t>
    </template>


</odoo>